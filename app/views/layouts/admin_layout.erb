            <div class="form-group" style="">

                <input type="text" class="form-control" placeholder="Search Query" id="searchquery"></input>

            </div>

            <div class="btn-group">

                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">

                    Search in <span class="caret"></span>

                </button>

                <ul class="dropdown-menu" role="menu">
                    <li style=""><a href="" onclick="searchbook()" id="search" style="background: none repeat scroll 0% 0% white; color: black;">Books</a></li>
                    <li style="font-color:red"><a href="" onclick="searchauthor()">Authors</a></li>
                    <li style="font-color:red"><a href="" onclick="searchcategory()">Category</a></li>


                </ul>

            </div>


            </li>
